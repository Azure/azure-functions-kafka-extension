{
    "bindings": [
        {
            "type": "kafkaTrigger",
            "name": "event",
            "direction": "in",
            "topic": "%KafkaTopic%",
            "brokerList": "%KafkaBroker%",
            "consumerGroup": "%KafkaConsumerGroup%",
            "dataType": "binary",
            "AuthenticationMode": "PLAIN",
            "Protocol": "SaslSsl",
            "username": "%KafkaUsername%",
            "password": "%KafkaPassword%",
            "SslCaLocation": "%CertLocation%"
        }
    ]
}