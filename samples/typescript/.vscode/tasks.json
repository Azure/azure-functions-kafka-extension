{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-watch",
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": ["npm build", "func extensions install"]
        },
        {            
            "type": "func",
            "label": "func extensions install",
            "command": "extensions install",            
            "problemMatcher": "$func-watch",
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "npm build",
            "command": "npm run build",
            "dependsOn": "npm install",
            "problemMatcher": "$tsc"
        },
        {
            "type": "shell",
            "label": "npm install",
            "command": "npm install"
        },
        {
            "type": "shell",
            "label": "npm prune",
            "command": "npm prune --production",
            "dependsOn": "npm build",
            "problemMatcher": []
        }
    ]
}