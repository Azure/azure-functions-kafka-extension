<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Microsoft.Azure.WebJobs.Kafka</AssemblyName>
    <RootNamespace>Microsoft.Azure.WebJobs.Kafka</RootNamespace>
    <PackageId>Microsoft.Azure.WebJobs.Extensions.Kafka</PackageId>
    <Description>Microsoft Azure WebJobs SDK Kafka Extension</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Confluent.Kafka" Version="1.0.0-beta3" />
    <PackageReference Include="librdkafka.redist" Version="1.0.0-RC7" />
    <PackageReference Include="Microsoft.Azure.WebJobs" Version="3.0.4" />
    <PackageReference Include="Confluent.SchemaRegistry.Serdes" Version="1.0.0-beta3" />
    <PackageReference Include="Google.Protobuf" Version="3.7.0" />
  </ItemGroup>
  <ItemGroup>
    <None Update="cacert.pem">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>